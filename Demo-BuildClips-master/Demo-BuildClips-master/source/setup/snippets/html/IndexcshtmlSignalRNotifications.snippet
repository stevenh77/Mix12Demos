    <Snippet>
      <Code Language="csharp" Delimiter="Ã…">
        <![CDATA[<script src="@Url.Content("~/Scripts/jquery.signalR-1.0.0-alpha2.min.js")"></script>
    <script src="@Url.Content("~/signalr/hubs")" type="text/javascript"></script>
    <script>
        $(function () {
            var connection = $.hubConnection();
            var hub = connection.createHubProxy("Notifier");
            hub.on("onVideoUpdate", function (video) {
                if (video.ThumbnailUrl) {
                    $("#video_" + video.Id).css("background", "url(" + video.ThumbnailUrl + ") no-repeat top left");
                }
            });

            connection.start();
        });
    </script>]]>
