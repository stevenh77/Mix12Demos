@model BuildClips.Models.RegisterExternalLoginModel
@{
    Layout = "~/Views/Shared/_Layout.Login.cshtml";
}

<p class="externaltitle" style="margin-top:150px;">Associate your @ViewBag.ProviderDisplayName account.</p>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    

    <fieldset id="localLogin" style="width:400px;">
        <legend>Association Form</legend>
        <p style="text-align:justify;">You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>.
        Please enter a user name for this site below and click the Confirm button to finish logging in.</p>

        <ol>
            <li>
                @Html.TextBoxFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Register" />

        @Html.ValidationSummary(true)
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
    
